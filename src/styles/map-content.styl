#view-location
  & section
    margin-bottom 4px
  & label
    font-weight bold
    margin-bottom 4px
    display block
    & + *
      margin 4px 0
  & .photos
    display flex
    & img
      height 40px
      margin-right 2px
      display inline-block
  & .info
    font-size 12px
    margin-top 0
    margin-bottom 0

#add-location
  cursor pointer
  &:hover
    color blue

#edit-new-location
  & section
    margin-bottom 4px
  & label
    font-weight bold
    display block
    & + *
      margin 4px 0
  & textarea
    width 77vw
    min-width 100%
    max-width 360px
    box-sizing border-box
    resize none
  & .photos
    display flex
  & .preview
    margin-right 2px
    display inline-block
    position relative
    cursor pointer
    & img
      height 40px
      &.preparing, &.uploading
        filter brightness(90%)
      &.failed
        filter sepia(100%) brightness(75%) blur(1px)
    & progress
      absolute-centered-fixed-width()
      width 80%
      bottom 25%
      height 3px
      pill-shape()
  & .error
    color red
    margin-top 0
    margin-bottom 4px
  & .buttons
    margin 6px 0
  & button
    margin-right 4px
  & .info
    margin 0

#input-litter-level
  cursor pointer
