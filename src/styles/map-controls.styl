map-control-shadow()
  box-shadow 0 1px 4px -1px #ccc

#avatar
  background-color #ccc
  width 48px
  height 48px
  position absolute
  right 66px
  top 6px
  border-radius 50%
  border 1.5px solid white
  overflow hidden
  &.logged-in
    cursor pointer
  img
    width 100%
    height 100%

#address-search
  position absolute
  top 13px
  width 100%
  pointer-events none
  & > *
  .click-screen ~ &
    z-modal()
  & form
    padding 0 7px
    & input
      font-size 17px
      width 210px
      max-width 100%
      pill-shape()
      box-sizing border-box
      padding 4px 12px
      outline-style none
      pointer-events all
      &::placeholder
        text-align right
  & .search-results
    font-size 16px
    background-color white
    margin-top 2px
    margin-right 7px
    margin-left 7px
    border-radius 6px
    overflow hidden
    max-width 592px
    user-select none
    map-control-shadow()
    clear right
    pointer-events all
    .result
      padding 1px 4px
      cursor pointer
      &:hover, &.selected
        background-color #ccf

#map-buttons
  position absolute
  top 30%
  right 10px
  button
    all unset
    color #666
    background-color white
    width 40px
    height 40px
    border-radius 50%
    map-control-shadow()
    margin-top 8px
    display block
    cursor pointer
    &:hover
      color darken(@color, 30%)
    svg
      width 100%
      height 100%

#hint
  background linear-gradient(to bottom, #555 0%, #191818 80%, #216155 100%)
  box-shadow 0 0 20px 3px #333
  border 1px #363636 solid
  color #eee
  text-shadow 1px 1px 2px black
  pill-shape()
  position absolute
  left 50%
  transform: translateX(-50%)
  bottom 30px
  padding 0 1em
  text-align center
  white-space nowrap
  font-size 14px
  opacity 0.8
  cursor pointer
  pointer-events none
