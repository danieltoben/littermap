#menu-toggle
  background-color white
  color #2e2e2e
  width 42px
  height 36px
  top 11px
  right 8px
  border-radius 6px
  overflow hidden
  user-select none
  position absolute
  cursor pointer
  html.non-touch &:hover
    background-color darken(@background-color, 20%)
  & svg
    width 100%
    height 100%
    display block

#menu
  font-size 18px
  text-align center
  position absolute
  background-color white
  width 220px
  max-width 100%
  top 52px
  right 6px
  box-shadow 2px 3px 6px -1px #666
  border-radius 6px
  overflow hidden
  user-select none
  & a
    color inherit
    text-decoration none
  & ul
    list-style-type none
    padding-left 0
    margin 0 0
  & li
    padding 9px 0
    cursor pointer
    &:hover
      background-color #eaeaea
