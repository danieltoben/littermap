.location-info
  min-width 266px
  & section
    margin-bottom 4px
  & label
    font-weight bold
    margin-bottom 4px
    display block
    & .edit
      all unset
      color #666
      margin-left 1px
      cursor pointer
      &:hover
        color lighten(@color, 40%)
      & svg
        height 18px
        vertical-align text-bottom
  & textarea
    width 100%
    min-height 36px
    max-height 90px
    margin 0
    box-sizing border-box
    overflow scroll-y
    resize none
  & input[type=range]
    cursor pointer
  & .photos
    display flex
    & img
      height 40px
      margin-right 2px
      display inline-block
  & .preview
    margin-right 2px
    display inline-block
    position relative
    cursor pointer
    & img
      height 40px
      &.preparing, &.uploading
        filter brightness(90%)
      &.failed
        filter sepia(100%) brightness(75%) blur(1px)
    & progress
      absolute-centered-fixed-width()
      width 80%
      bottom 25%
      height 3px
      pill-shape()
  & .error
    color red
    margin-top 0
    margin-bottom 4px
  & .buttons
    margin 4px 0
    & button
      margin-right 4px
  & .info
    font-size 12px
    margin 0
