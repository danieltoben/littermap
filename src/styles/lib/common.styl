fill-parent()
  width 100%
  top 0
  bottom 0
  position absolute

// Horizontally center an absolutely positioned fixed width element
absolute-centered-fixed-width()
  position absolute
  margin 0 auto
  left 0
  right 0

// Center an absolutely positioned fixed size element in both dimensions
absolute-centered-fixed-size()
  position absolute
  margin auto
  top 0
  left 0
  right 0
  bottom 0

pill-shape()
  border-radius 9999px // percent doesn't work for this

//
// The (invisible) click screen is occasionally used to cover the viewport to temporarily
// prevent click events from propagating to the elements under it. Elements can implement
// z-modal() to rise above it and remain interactive.
//
Z-SCREEN = 100

z-modal(level = 1)
  z-index Z-SCREEN + level

.click-screen
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  z-index Z-SCREEN
