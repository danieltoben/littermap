@require 'lib/mixins'
@require 'lib/common'

body
  overflow: hidden

#map
  position: absolute
  top: header-height
  bottom: 0
  width: 100%
  z-index: 0

#submit-location
  background: linear-gradient(to right, #4d4e4d 0%, #40877a 80%, #216155 100%)
  border: none
  color: #e1dcdc
  position: absolute
  absolute-centered()
  bottom: 30px
  padding: 0 1em
  height: 3em
  border-radius: 10000px
  cursor: pointer
  z-index: 9999
