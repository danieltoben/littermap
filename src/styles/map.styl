#map
  z-index 0

#address-search
  position absolute
  top header-height + 16px
  right 7px
  min-width 260px
  z-foreground()
  pointer-events none
  & > *
    pointer-events all

#address-input
  font-size 17px
  width 180px
  float right
  &::placeholder
    text-align right

#search-results
  font-size 16px
  background-color white
  user-select none
  clear right
  .result
    padding 1px 4px
    cursor pointer
    &:hover, &.selected
      background-color #ccf

.map-control
  all unset
  font-size 38px
  color #666
  background-color white
  width 20px
  height 41px
  right 10px
  border-radius 2px
  text-align center
  position absolute
  user-select none
  cursor pointer
  &:hover
    color black

#switch-layers
  top 125px
  padding-left 8px
  padding-right 10px
  line-height 2px

#geolocate
  top 176px
  padding-left 8px
  padding-right 10px
  line-height 2px

#submit-location
  background linear-gradient(to right, #4d4e4d 0%, #40877a 80%, #216155 100%)
  box-shadow 0 0 20px 3px #333
  border 1px #363636 solid
  pill-shape()
  color #e1dcdc
  position absolute
  absolute-centered()
  bottom 30px
  padding 0 1em
  height 3em
  cursor pointer
  z-index 9999
  &:hover
    background linear-gradient(to right, lighten(#4d4e4d, 5%) 0%, lighten(#40877a, 5%) 80%, lighten(#216155, 5%) 100%)
    box-shadow 0 0 5px 1px #666
    color #fff
    transform scale(1.012)
